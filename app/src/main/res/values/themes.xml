<resources>
    <!-- Base application theme. -->
    <style name="Theme.Wanandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item> <!-- 主要品牌颜色，一般用于ActionBar背景 -->
        <item name="colorPrimaryVariant">@color/purple_500</item> <!-- 顶部状态栏颜色 -->
        <item name="colorOnPrimary">@color/white
        </item> <!-- colorOn[Primary, Secondary, Surface …] 在Primary等这些背景的上面内容的颜色，例如ActioBar上面的文字颜色-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item> <!-- 第二品牌颜色 -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- 第二品牌颜色的可选颜色 -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--原先Theme.AppCompat.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500
        </item> <!-- 默认设置给colorControlActivated，一般是主要品牌颜色的明亮版本补充 -->

    </style>

    <!-- android11及以下的启动动画适配 -->
    <!--<style name="MySplashTheme" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="windowSplashScreenAnimationDuration">200</item> &lt;!&ndash; integer &ndash;&gt;
        <item name="windowSplashScreenBackground">@color/purple_500</item>  &lt;!&ndash; color &ndash;&gt;
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item> &lt;!&ndash; reference &ndash;&gt;
        <item name="postSplashScreenTheme">@style/SplashActivityTheme</item> &lt;!&ndash; 必须 &ndash;&gt; &lt;!&ndash; reference &ndash;&gt;
    </style>-->

    <style name="SplashActivityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>


    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--<item name="android:colorBackground">@drawable/shape_round_rect_white_dp_5</item>-->
        <item name="android:layout_width">150dp</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item> <!--新增一个item，用于控制menu-->
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>


    <!-- 设置TextInputEditText的输入下划线 -->
    <style name="MyTextInputEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>



</resources>
