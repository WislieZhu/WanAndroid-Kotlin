<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="articleInfo"
            type="com.wislie.wanandroid.data.ArticleInfo" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list_cardview">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="洪老大"
            android:textColor="@android:color/black"
            android:padding="@dimen/dp_3"
            android:textSize="13sp"
            app:author="@{articleInfo}"
            />

        <TextView
            android:id="@+id/tv_is_top"
            android:text="置顶"
            app:type="@{articleInfo.type}"
            android:padding="@dimen/dp_3"
            android:textColor="@android:color/holo_red_light"
            android:background="@drawable/shape_round_rect_red_dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@id/tv_author"
            app:layout_constraintBottom_toBottomOf="@id/tv_author"
            app:layout_constraintLeft_toRightOf="@id/tv_author"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tag_flowlayout"
            app:tags="@{articleInfo.tags}"
            app:layout_constraintTop_toTopOf="@id/tv_author"
            app:layout_constraintBottom_toBottomOf="@id/tv_author"
            app:layout_constraintLeft_toRightOf="@id/tv_is_top"
            app:max_select="-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_release_date"
            android:text="@{articleInfo.niceDate}"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/tv_author"
            app:layout_constraintBottom_toBottomOf="@id/tv_author"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            app:titles="@{articleInfo.title}"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_author"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            tools:text="哈哈哈super"
            android:id="@+id/tv_super_chapter_name"
            android:text='@{articleInfo.superChapterName+"·"+articleInfo.chapterName}'
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_collect"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_super_chapter_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_super_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            app:isCollect="@{articleInfo.collect}"
            android:src="@mipmap/ic_favorite"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>