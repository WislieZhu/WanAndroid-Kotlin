<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coinRankInfo"
            type="com.wislie.wanandroid.data.CoinRankInfo" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#798080"
                android:padding="@dimen/dp_3"
                android:textStyle="bold"
                android:textSize="13sp"
                app:coinRankIndex="@{coinRankInfo.index}"
                />

            <TextView
                android:id="@+id/tv_username"
                tools:text="xxx"
                android:text="@{coinRankInfo.username}"
                android:textColor="#798080"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/tv_rank"
                app:layout_constraintBottom_toBottomOf="@id/tv_rank"
                app:layout_constraintLeft_toRightOf="@id/tv_rank"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_current_coin"
                tools:text="28"
                app:coinCount="@{coinRankInfo.coinCount}"
                android:textColor="#798080"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_username"
                app:layout_constraintBottom_toBottomOf="@id/tv_username"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>