<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="articleInfo"
            type="com.wislie.wanandroid.data.ArticleInfo" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="洪老大"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                app:author="@{articleInfo}"
                />


            <TextView
                android:id="@+id/tv_release_date"
                android:text="@{articleInfo.niceDate}"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="@id/tv_author"
                app:layout_constraintBottom_toBottomOf="@id/tv_author"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_author"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_author"
                app:layout_constraintLeft_toLeftOf="@id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_envelope_pic"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_marginRight="@dimen/dp_5"
                    app:parameter="@{articleInfo.envelopePic}"
                    app:envelopePic="@{articleInfo.envelopePic}" />

                <TextView
                    android:id="@+id/tv_title"
                    tools:text="xxxxx"
                    app:titles="@{articleInfo.title}"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/iv_envelope_pic"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_desc"
                    tools:text="yyy"
                    app:parameter="@{articleInfo.envelopePic}"
                    android:text="@{articleInfo.desc}"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textColor="@android:color/black"
                    android:layout_below="@id/tv_title"
                    android:layout_toRightOf="@id/iv_envelope_pic"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                tools:text="哈哈哈super"
                android:id="@+id/tv_super_chapter_name"
                android:text="@{articleInfo.chapterName}"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/rl_author"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_collect"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_super_chapter_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_super_chapter_name"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/ic_favorite"
                app:tint="@android:color/holo_red_light"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>