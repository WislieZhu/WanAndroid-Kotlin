<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="articleInfo"
            type="com.wislie.wanandroid.data.ArticleInfo" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_list_cardview">

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="洪老大"
            android:textColor="@android:color/black"
            android:padding="@dimen/dp_3"
            android:textSize="13sp"
            android:text="@{articleInfo.author}"
            />


        <TextView
            android:id="@+id/tv_release_date"
            android:text="@{articleInfo.niceDate}"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/tv_author"
            app:layout_constraintBottom_toBottomOf="@id/tv_author"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            tools:text="Material Design 设计师分享如何快速入门 UX 设计"
            app:titles="@{articleInfo.title}"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_author"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            tools:text="哈哈哈super"
            android:id="@+id/tv_super_chapter_name"
            android:text='@{articleInfo.superChapterName+"·"+articleInfo.author}'
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/iv_collect"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_super_chapter_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_super_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            app:isCollect="@{articleInfo.collect}"
            android:src="@mipmap/ic_favorite"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>