<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todoStateVm"
            type="com.wislie.wanandroid.viewmodel.TodoStateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include
            android:id="@+id/tb"
            layout="@layout/include_toolbar" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:text="标题"
            android:textColor="@color/color_666"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_round_gray_dp_2"
            android:hint="请输入标题"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:text="@{todoStateVm.title}"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:editTextChange="@{todoStateVm.onTitleEditTextChangeListener}"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:text="内容"
            android:textColor="@color/color_666"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_title" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_round_gray_dp_2"
            android:gravity="left|top"
            android:hint="请输入内容"
            android:text="@{todoStateVm.content}"
            android:maxLength="100"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:editTextChange="@{todoStateVm.onContentEditTextChangeListener}"/>

        <TextView
            android:id="@+id/tv_complete_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:text="预期完成日期"
            android:textColor="@color/color_666"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_content" />

        <TextView
            android:id="@+id/tv_choose_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/shape_round_gray_dp_2"
            android:hint="选择预期完成时间"
            android:text="@{todoStateVm.date}"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_complete_date" />

        <TextView
            android:id="@+id/tv_type_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:text="类型"
            android:textColor="@color/color_666"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_date" />

        <RadioGroup
            android:id="@+id/rb_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_type_level"
            app:todoType="@{todoStateVm.type}"
            app:checkedChange="@{todoStateVm.onTypeCheckedChangeListener}">

            <RadioButton
                android:id="@+id/rb_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作" />

            <RadioButton
                android:id="@+id/rb_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活" />
            <RadioButton
                android:id="@+id/rb_entertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_priority_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:text="优先级"
            android:textColor="@color/color_666"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rb_type" />

        <RadioGroup
            android:id="@+id/rb_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_priority_level"
            app:todoPriority="@{todoStateVm.priority}"
            app:checkedChange="@{todoStateVm.onPriorityCheckedChangeListener}">

            <RadioButton
                android:id="@+id/rb_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重要" />

            <RadioButton
                android:id="@+id/rb_generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_round_rect_purple"
            android:gravity="center"
            android:text="提交"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rb_priority"
            android:textColor="@color/white" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>