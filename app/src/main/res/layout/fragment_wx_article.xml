<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="wxArticleStateVm"
            type="com.wislie.wanandroid.viewmodel.WxArticleStateViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_input_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入搜索关键字"
                android:lines="1"
                android:padding="5dp"
                android:textSize="18sp"
                app:editTextChange="@{wxArticleStateVm.onInputEditTextChangeListener}" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_input_content"
                android:text="搜索" />
        </RelativeLayout>

        <include
            android:id="@+id/list"
            layout="@layout/include_list" />
    </LinearLayout>
</layout>